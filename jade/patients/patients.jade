ion-view(view-title="Mis Pacientes")
  ion-nav-buttons(side='primary')
    //button.button.button-clear(ng-click="goBack()")
      i.icon.ion-ios-arrow-left  
  ion-content

    ion-list
      ion-item.item-avatar.item-icon-right(ng-repeat="p in patientsCtrl.patients", ng-click="patientsCtrl.goHistory(p.paciente)")
        img(ng-src="{{ patientsCtrl.getImage(p.paciente.avatar) }}")
        h2(ng-bind="p.paciente.nombre")
        p {{p.enfermedad}}
        hr
        p.centro-med(ng-bind="p.paciente.institucion")
        i.icon.ion-ios-arrow-right
        ion-option-button.button-assertive Eliminar

            
    