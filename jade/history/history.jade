ion-view(view-title="Historial de Paciente")
  ion-content
    .banner-avatar(id="detalle-header3")
      .cont-avatar
        .avatar
          img(ng-src="http://ec2-107-21-84-195.compute-1.amazonaws.com:8080/api/file/pathAvatar")
        h4(ng-bind="historyCtrl.user.nombre")
    
    .item.modulo-history(ng-repeat="h in historyCtrl.hist.active",ng-click="historyCtrl.toLearn(h.idGuia)")
      .collapse( ng-click="active = !active") 
        i.icon-collapse
        <!--p Guía Actual-->
        h3(ng-bind="h.titulo")
        h4(ng-bind="h.subtitulo")
        .cont-progress
          span {{h.porcentaje}}%
          .progress-porcent(ng-style="{ 'width': h.porcentaje + '%' }")
          
      //.row.info-history(ng-show="active")
        .col
          span Completado
          span.porcent 3
          small Modulos
        .col
          span Reintentos
          span.porcent 4
          small Intentos
        .col
          span Tiempo
          span.porcent 1
          small Semana
      
        h4 Detalle {{detalle}}
        
      
    h3.title-bg.tcenter Guías Completadas
    .item.modulo-history.modulo-history-small(ng-repeat="h in historyCtrl.hist.completed | unique: 'idGuia'",ng-click="historyCtrl.toLearn(h.idGuia)")
      h3(ng-bind="h.titulo")
      h4(ng-bind="h.subtitulo")
      .row.foot-data
        .col
          i.icon.ion-android-calendar
        .col
          span 
            strong Inicio: 
            | {{current.fechaInicio | date:'dd-MM-yyyy'"}}
        
          span 
            strong Fin:  
            | {{current.fechaCompletado | date:'dd-MM-yyyy'"}}

