ion-view(view-title="Historial de Paciente")
  ion-content
    .banner-avatar(id="detalle-header3")
      .cont-avatar
        .avatar
          img(ng-src="{{ historyCtrl.getImage(historyCtrl.user.avatar) }}")
        h4(ng-bind="historyCtrl.user.nombre")
    
    .item.modulo-history(ng-repeat="h in historyCtrl.hist.active")
      .collapse( ng-click="active = !active") 
        i.icon-collapse(ng-class="{'ion-chevron-up': active, 'ion-chevron-down': !active}")
        p Guía Actual
        h3(ng-bind="h.nombreGuia")
        h4(ng-bind="h.nombreModulo")
        .cont-progress
          span {{h.porcentaje}}%
          .progress-porcent(ng-style="{ 'width': h.porcentaje + '%' }")
          
      .row.info-history(ng-show="active")
        .col
          span Completado
          span.porcent 3
          small Modulos
        .col
          span Reintentos
          span.porcent 4
          small Intentos
        .col
          span Tiempo
          span.porcent 1
          small Semana
      
        h4 Detalle {{detalle}}
        
      
    h3.title-bg.tcenter Guías Completadas
    .item.modulo-history.modulo-history-small(ng-repeat="h in historyCtrl.hist.completed")
      h3(ng-bind="h.nombreGuia")
      h4(ng-bind="h.nombreModulo")
      .row.foot-data
        .col
          i.icon.ion-android-calendar
        .col
          span 
            strong Inicio: 
            | 24/06/2016 
        
          span 
            strong Fin:  
            | 28/06/2016
      
