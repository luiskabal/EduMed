ion-side-menus(enable-menu-with-back-views='true')
  ion-side-menu-content
    ion-nav-bar.bar-royal
      //BACK button
      ion-nav-back-button.button-clear
        i.icon.ion-ios-arrow-left
      
      ion-nav-buttons(side='right')
        button.button.button-icon.button-clear.ion-navicon(menu-toggle='right')
    
    ion-nav-view(name='menuContent')

  ion-side-menu(side='right')
    ion-header-bar.bar-dark
      .cont-avatar
        a(href="#/app/user",menu-close-keep-history)
          .avatar
            img(ng-src="{{perfil.avatarPerfil}}",on-error-src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR42mNkYAAAAAYAAjCB0C8AAAAASUVORK5CYII=")
      h1.title Hola, 
        strong(ng-bind='perfil.nombre')
    ion-content.has-header
      ion-list
        ion-item.item-icon-left.item-icon-right(menu-close-keep-history,href="#/app/home")
          i.icon.ion-android-home
          | Inicio
          i.icon.ion-ios-arrow-forward
        ion-item.item-icon-left.item-icon-right(menu-close-keep-history,href="javascript:void(0);", ng-click="irPerfil()")
          i.icon.ion-person
          | Mi Perfil
          i.icon.ion-ios-arrow-forward
        ion-item.item-icon-left.item-icon-right(menu-close-keep-history,href="#/app/history-user",ng-show='perfil.tipoUsuario == "ROLE_PACIENTE"')
          i.icon.ion-ios-paper
          | Historial de Aprendizaje
          i.icon.ion-ios-arrow-forward
        ion-item.item-icon-left.item-icon-right(menu-close-keep-history, href="#/app/patients",ng-show='perfil.tipoUsuario != "ROLE_PACIENTE"')
          i.icon.ion-ios-paper
          | Pacientes
          i.icon.ion-ios-arrow-forward
        ion-item.item-icon-left.item-icon-right(menu-close-keep-history, href="#/app/generate-code",ng-show='perfil.tipoUsuario != "ROLE_PACIENTE"')
          i.icon.ion-pound
          | Generar CÃ³digo
          i.icon.ion-ios-arrow-forward
        ion-item.item-icon-left.item-icon-right(menu-close-keep-history, href="javascript:void(0);", ng-click="cerrarSession()")
          i.icon.ion-log-out
          | Cerrar Sesion
          i.icon.ion-ios-arrow-forward
