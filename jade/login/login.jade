ion-view.ion-view-login(hide-nav-bar='true')
  // view-title="Login"
  ion-content
    .padding
      .content-app.padding.content-login
        .content-logo-login
          .logo-login
        .list
          label.item.item-input.item-stacked-label.error
            span.input-label E-mail:
            input(type='text', placeholder='mail@mail.com')
            span.msj-error Error mensaje
          label.item.item-input.item-stacked-label
            span.input-label Contraseña:
            input(type='password', placeholder='•••••••')
            
          .item
            button.button.button-full.button-positive(ng-click="login.login()")
              | Iniciar Sesion
        hr
        .item
          button.button.button-full.button-energized(ui-sref='suscribirse')
            | Suscribete
