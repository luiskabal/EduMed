ion-view(view-title="{{moduleCtrl.guide.titulo}}")
  ion-nav-buttons(side='primary')
    button.button.button-clear(ng-click="goBack()")
      i.icon.ion-ios-arrow-left
  ion-content
    .content-video
      videogular(vg-player-ready='moduleCtrl.onPlayerReady($API)', ng-show='!moduleCtrl.testRun', vg-theme='moduleCtrl.config.theme.url', vg-complete='moduleCtrl.onCompleteVideo()')
        vg-media(vg-src='moduleCtrl.config.sources', vg-native-controls='false')
        vg-overlay-play
        vg-poster(vg-url='moduleCtrl.config.plugins.poster')
        vg-controls
          vg-play-pause-button
          vg-time-display {{ currentTime | date:'mm:ss':'+0000' }}
          vg-scrub-bar
            vg-scrub-bar-current-time
          vg-time-display {{ timeLeft | date:'mm:ss':'+0000' }}
          vg-time-display {{ totalTime | date:'mm:ss':'+0000' }}
          vg-volume
            vg-mute-button
            vg-volume-bar
          vg-fullscreen-button
        vg-buffering
    div
      .padding
        .box-bg
          ul.module-steps
            li.module-step.step-ok
              //span Modulo uno
            li.module-step.active
              //span Modulo dos
            li.module-step
              //span Modulo tres
            li.module-step
              //span Modulo cuatro
            li.module-step
              //span Modulo cinco
          h2.title-view(ng-bind="moduleCtrl.guide.titulo",ng-click="moduleCtrl.showConfirm()")
          .item
            button.button.button-full.button-positive(type='submit', ng-click='moduleCtrl.openModal()')
              | Comenzar Test
