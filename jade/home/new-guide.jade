ion-view(view-title="Nuevas Guías")
  ion-nav-buttons(side='primary')
    button.button.button-clear(ng-click="goBack()")
      i.icon.ion-ios-arrow-left
  ion-content
    label.item.item-input
      i.icon.ion-search.placeholder-icon
      input(type='text', placeholder='Buscar Guías')
    
    ion-list
      ion-item.item-module(ng-repeat="g in newguides.guides",href="#/app/aprender")
        .module.row
          .col.col-33.video
            img.full-image(src="img/video/La_artritis_psoriasica.jpg")
          .col.modulo-info
            h3(ng-bind="g.titulo")
            h4(ng-bind="g.subtitulo")
            span.estado(ng-class="{ok: newguides.isComplete(g)}")
            | {{ newguides.isComplete(g)? 'completo' : 'incompleto' }}
        
        .module-foot.row 
          .col.progress
            .mod.ok
            .mod.ok
            .mod.ok
            .mod.ok             
          .col.tright
             button.button.button-small.button-positive.icon-left
              i.icon.ion-ios-search-strong
              | Ver Modulo
        
      ion-item.item-module(href="#/app/aprender")
        .module.row
          .col.col-33.video
            img.full-image(src="img/video/La_artritis_psoriasica.jpg")
          .col.modulo-info
            h3 Artritis Psoriasica
            h4 Introducción
            span.estado incompleto
        .module-foot.row 
          .col.progress
            .mod.ok
            .mod.ok
            .mod
            .mod            
          .col.tright
            button.button.button-small.button-positive.icon-left
              i.icon.ion-ios-search-strong
              | Ver Modulo
       
          
            
    