ion-view(view-title="Historial de Aprendizaje")
  ion-nav-buttons(side='primary')
    button.button.button-clear(ng-click="goBack()")
      i.icon.ion-ios-arrow-left
  ion-content
    .item.modulo-history
      .collapse( ng-click="active = !active") 
        i.icon-collapse(ng-class="{'ion-chevron-up': active, 'ion-chevron-down': !active}")
        p Guía Actual
        h3 Artritis Psoriasica
        h4 Introducción
        .cont-progress
          span 80%
          .progress-porcent(style="width:80%")
          
      .row.info-history(ng-show="active")
        .col
          span Completado
          span.porcent 3
          small Modulos
        .col
          span Reitentos
          span.porcent 4
          small Intentos
        .col
          span Tiempo
          span.porcent 1
          small Semana
    .item.modulo-history
      .collapse( ng-click="active2 = !active2") 
        i.icon-collapse(ng-class="{'ion-chevron-up': active2, 'ion-chevron-down': !active2}")
        p Guía Completada
        h3 Artritis Psoriasica
        h4 Introducción
        .cont-progress
          span 60%
          .progress-porcent(style="width:60%")
          
      .row.info-history(ng-show="active2")
        .col
          span Completado
          span.porcent 3
          small Modulos
        .col
          span Reitentos
          span.porcent 4
          small Intentos
        .col
          span Tiempo
          span.porcent 1
          small Semana